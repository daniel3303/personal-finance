<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Software de GestÃ£o">
    <meta name="author" content="Skern">

    <title>{{ 'Login'|trans }} - {{ app_name }}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('backend') }}
    {% endblock %}

</head>

<body class="bg-gradient-primary">

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-4">
                                {{ include('backend/component/session_messages.html.twig') }}
                            </div>
                            <div class="pl-5 pb-5 pr-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">{{ 'Welcome back!'|trans }}</h1>
                                </div>
                                <form class="user" action="{{ path('login') }}" method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    <div class="form-group">
                                        <input required type="email" name="email" value="{{ last_username }}"
                                               class="form-control form-control-user"
                                               placeholder="Insira o seu email...">
                                    </div>
                                    <div class="form-group">
                                        <input required type="password" name="password"
                                               class="form-control form-control-user"
                                               placeholder="Insira a sua senha...">
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"/>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        {{ 'Login'|trans }}
                                    </button>
                                </form>

                                <hr />

                                <div class="text-center">
                                    <a class="small" href="{{ path('recover_password') }}">{{ 'Reset password'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


{% block javascripts %}
    {{ encore_entry_script_tags('backend') }}
{% endblock %}

</body>

</html>

